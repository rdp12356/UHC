{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "nodeVersion": "20.x",
  "serverlessFunctionRegion": "iad1",
  "env": {
    "DATABASE_URL": "@database_url",
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

